<GauntletLayer>
    <Widget Width="100%" Height="100%">
        <Children>
            <TextWidget Text="{Binding Title}" />
            <ListPanel ItemsSource="{Binding Decisions}">
                <ItemTemplate>
                    <Widget>
                        <Children>
                            <TextWidget Text="{Binding Title}" />
                            <TextWidget Text="{Binding Description}" />
                            <ButtonWidget Command="{Binding VoteYesCommand}" Text="Vote Yes" />
                            <ButtonWidget Command="{Binding VoteNoCommand}" Text="Vote No" />
                        </Children>
                    </Widget>
                </ItemTemplate>
            </ListPanel>
            <ButtonWidget Command="{Binding ProposeCommand}" Text="Propose" />
            <ButtonWidget Command="{Binding RefreshCommand}" Text="Refresh" />
        </Children>
    </Widget>
</GauntletLayer>
