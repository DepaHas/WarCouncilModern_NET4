<Widget Width="100%" Height="100%">
    <!-- Background -->
    <BrushWidget Width="100%" Height="100%" Brush="DefaultBrush" />

    <Children>
        <Widget Width="100%" Height="100%" LayoutMethod="Vertical">
            <!-- Header: Decision Title -->
            <TextWidget Width="100%" Height="60" Text="{Binding Title}" Brush="Header.Text" HorizontalAlignment="Center" VerticalAlignment="Center" />

            <!-- Separator -->
            <BrushWidget Width="90%" Height="2" Brush="DefaultBrush" Color="#CCCCCCFF" HorizontalAlignment="Center" />

            <!-- Body: Decision Description -->
            <TextWidget Width="90%" Height="*%" MarginTop="20" Text="{Binding Description}" Brush="Body.Text" HorizontalAlignment="Center" />

            <!-- Footer Buttons -->
            <Widget Width="100%" Height="100" LayoutMethod="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                <ButtonWidget Width="200" Height="50" MarginLeft="10" MarginRight="10" Command.Click="VoteYesCommand" Brush="Button.PrimaryAction">
                    <Children>
                        <TextWidget Text="Vote Yes" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Children>
                </ButtonWidget>
                <ButtonWidget Width="200" Height="50" MarginLeft="10" MarginRight="10" Command.Click="VoteNoCommand" Brush="Button.SecondaryAction">
                    <Children>
                        <TextWidget Text="Vote No" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Children>
                </ButtonWidget>
                <ButtonWidget Width="150" Height="50" MarginLeft="10" MarginRight="10" Command.Click="BackCommand" Brush="Button.Default">
                    <Children>
                        <TextWidget Text="Back" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Children>
                </ButtonWidget>
            </Widget>
        </Widget>
    </Children>
</Widget>
