<Widget Width="100%" Height="100%">
    <Children>
        <Widget Width="100%" Height="100%" LayoutMethod="Vertical">
            <Children>
                <!-- Title -->
                <TextWidget Width="100%" Height="80" Text="War Council Management" Brush="Header.Text" HorizontalAlignment="Center" VerticalAlignment="Center" />

                <!-- Spacer -->
                <Widget Width="100%" Height="50" />

                <!-- Open Council Button -->
                <ButtonWidget Width="400" Height="60" Command="{Binding OpenWarCouncilCommand}" Brush="Button.PrimaryAction" HorizontalAlignment="Center">
                    <Children>
                        <TextWidget Text="Open War Council" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Children>
                </ButtonWidget>
            </Children>
        </Widget>
    </Children>
</Widget>
