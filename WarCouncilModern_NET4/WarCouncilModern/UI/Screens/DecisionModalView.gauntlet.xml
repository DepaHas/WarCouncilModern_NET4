<!-- File: UI/Screens/DecisionModalView.gauntlet.xml -->
<GauntletMovie Name="DecisionModalView" Width="620" Height="420" IsModal="true" BlocksInput="true">
	<RootPanel>
		<VerticalStackPanel Spacing="10" Padding="12">
			<HorizontalStackPanel>
				<Text Text="{DataSource.HeaderText}" FontSize="18" />
				<Button Command="{DataSource.CloseCommand}" Width="64" HorizontalAlignment="Right">
					<Text Text="X" />
				</Button>
			</HorizontalStackPanel>

			<VerticalStackPanel Visible="{DataSource.IsProposeMode}">
				<Text Text="Title" />
				<TextInput Text="{DataSource.Title}" Width="560" />
				<Text Text="Description" />
				<TextInput Text="{DataSource.Description}" Width="560" Height="120" Multiline="true" />
				<HorizontalStackPanel HorizontalAlignment="Right" Spacing="8">
					<Button Command="{DataSource.CancelCommand}" Width="96">
						<Text Text="Cancel" />
					</Button>
					<Button Command="{DataSource.ProposeCommand}" Width="120">
						<Text Text="{DataSource.ProposeButtonText}" />
					</Button>
				</HorizontalStackPanel>
			</VerticalStackPanel>

			<VerticalStackPanel Visible="{DataSource.IsViewMode}">
				<Text Text="{DataSource.DecisionTitle}" FontSize="16" />
				<Text Text="{DataSource.DecisionDescription}" Width="560" Height="160" Multiline="true" />
				<HorizontalStackPanel HorizontalAlignment="Center" Spacing="12">
					<Button Command="{DataSource.CastYeaCommand}" Width="120">
						<Text Text="Vote Yea" />
					</Button>
					<Button Command="{DataSource.CastNayCommand}" Width="120">
						<Text Text="Vote Nay" />
					</Button>
				</HorizontalStackPanel>
			</VerticalStackPanel>
		</VerticalStackPanel>
	</RootPanel>
</GauntletMovie>