<!-- File: UI/Screens/CouncilDetailView.gauntlet.xml -->
<GauntletMovie Name="CouncilDetailView" Width="820" Height="560" IsModal="true">
	<RootPanel>
		<VerticalStackPanel Spacing="8" Padding="12">
			<HorizontalStackPanel Height="48">
				<Button Command="{DataSource.BackCommand}" Width="72">
					<Text Text="Back" />
				</Button>
				<Text Text="{DataSource.CouncilName}" FontSize="20" Margin="12,0,0,0" />
				<Text Text="Leader: {DataSource.LeaderName}" FontSize="13" HorizontalAlignment="Right" />
			</HorizontalStackPanel>

			<HorizontalStackPanel Spacing="12">
				<Text Text="Members:" />
				<Text Text="{DataSource.MemberCount}" />
				<Text Text=" | Active Decisions:" Margin="12,0,0,0" />
				<Text Text="{DataSource.ActiveDecisionsCount}" />
			</HorizontalStackPanel>

			<ListView ItemsSource="{DataSource.Decisions}" Width="796" Height="420" ItemHeight="80">
				<ListView.ItemTemplate>
					<VerticalStackPanel Padding="6">
						<HorizontalStackPanel VerticalAlignment="Center" Spacing="8">
							<Text Text="{Binding Title}" FontSize="16" Width="380" />
							<Text Text="Yes: {Binding YeaCount}" Width="90" HorizontalAlignment="Center" />
							<Text Text="No: {Binding NayCount}" Width="90" HorizontalAlignment="Center" />
							<Text Text="{Binding State}" Width="100" HorizontalAlignment="Center" />
							<Button Command="{Binding OpenDecisionCommand}" Width="96" Height="28" HorizontalAlignment="Right">
								<Text Text="Open" />
							</Button>
						</HorizontalStackPanel>
						<Text Text="{Binding ShortDescription}" FontSize="12" Opacity="0.8" />
					</VerticalStackPanel>
				</ListView.ItemTemplate>
			</ListView>
		</VerticalStackPanel>
	</RootPanel>
</GauntletMovie>